@model ThAmCo.Events.Models.StaffViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div class="row">
    <div class="col-md-6">
        <h4>Staff</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Surname)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Surname)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.FirstName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.FirstAider)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.FirstAider)
            </dd>
        </dl>
    </div>
    <div class="col-md-6">
        <h4>@Html.DisplayNameFor(model => model.Staffings)</h4>
        <hr />
        @if (Model.Staffings.Count == 0)
        {
            <p>No events to show.</p>
        }
        else
        {
            <partial name="_StaffingEvents" for="Staffings" />
        }
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
